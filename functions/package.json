{
  "name": "veredicto-cloud-function",
  "version": "1.0.0",
  "description": "Google Cloud Run function for Veredicto",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "gcp-build": "npm install && npm run build",
    "deploy": "gcloud run deploy veredicto-function --source . --region=us-east1 --allow-unauthenticated"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
